<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.currency.OneToOneCurrencyExchangeFrag">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/editText_amount"
            android:layout_width="138dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="45dp"
            android:layout_marginTop="138dp"
            android:ems="10"
            android:gravity="center"
            android:hint="@string/amount"
            android:inputType="number"
            android:textSize="12pt" />

        <com.example.beanielibrary.views.ValidationAutoText
            android:id="@+id/edit_text_base"
            android:layout_width="112dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="214dp"
            android:layout_marginTop="139dp"
            android:layout_marginEnd="85dp"
            android:gravity="center"
            android:textSize="12pt" />

        <com.example.beanielibrary.views.ValidationAutoText
            android:id="@+id/edit_text_quote"
            android:layout_width="109dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="257dp"
            android:layout_marginEnd="152dp"

            android:gravity="center"
            android:textSize="12pt" />

        <TextView
            android:id="@+id/txt_display_result"
            android:layout_width="347dp"
            android:layout_height="108dp"
            android:layout_below="@+id/editText_amount"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="33dp"
            android:layout_marginTop="221dp"
            android:layout_marginEnd="31dp"
            android:gravity="center"
            android:text="0"
            android:textSize="12pt" />



    </RelativeLayout>
</FrameLayout>